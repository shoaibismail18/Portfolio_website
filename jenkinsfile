pipeline {
    agent any  // Runs on any available Jenkins agent

    environment {
        REPO_URL = 'https://github.com/shoaibismail18/Portfolio_website'  // Change to your repo
    }

    stages {
        stage('Clone Repository') {
            steps {
                sh 'git clone ${REPO_URL}'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the Portfolio Website...'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying to the server...'
            }
        }
    }
}
